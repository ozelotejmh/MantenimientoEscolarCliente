@model MantenimientoEscolarCliente.Models.SolicitudViewModel

<h2>Nueva Solicitud</h2>
<form asp-action="Crear" method="post">
    <div>
        <label>Usuario ID</label>
        <input asp-for="usuarioId" class="form-control" required />
    </div>
    <div>
        <label>Categoría ID</label>
        <input asp-for="categoriaId" class="form-control" required />
    </div>
    <div>
        <label>Descripción</label>
        <input asp-for="descripcion" class="form-control" required />
    </div>
    <div>
        <label>Ubicación</label>
        <input asp-for="ubicacion" class="form-control" required />
    </div>
    <div>
        <label>Fecha</label>
        <input asp-for="fecha" type="date" class="form-control" required />
    </div>
    <div>
        <label>Estado</label>
        <input asp-for="estado" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
